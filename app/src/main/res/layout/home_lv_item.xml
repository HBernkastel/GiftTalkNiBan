<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/home_lv_item_rl1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingStart="@dimen/default_distance"
        android:paddingBottom="@dimen/margin_image_to_parent_1"
        android:paddingTop="@dimen/margin_image_to_parent_1"
        android:paddingEnd="@dimen/text_view_padding">
        <TextView
            android:id="@+id/home_lv_item_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_1"
            android:textColor="@color/actionBar"
            android:background="@drawable/home_lv_item_type_shape"
            android:padding="@dimen/text_view_padding_small"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/home_lv_item_ctitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_2"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/text_view_padding"
            android:layout_toEndOf="@id/home_lv_item_category_tv"/>
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_lv_item_author_iv"
                android:layout_width="@dimen/author_iv_layout"
                android:layout_height="@dimen/author_iv_layout"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:id="@+id/home_lv_item_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_view_padding"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_2"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:src="@drawable/ig_holder_image"
        android:id="@+id/home_lv_item_iv"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_iv_height"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingStart="@dimen/default_distance"
        android:paddingBottom="@dimen/margin_image_to_parent_1"
        android:paddingTop="@dimen/margin_image_to_parent_1"
        android:paddingEnd="@dimen/text_view_padding">
        <LinearLayout
            android:id="@+id/home_lv_item_ll"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/home_lv_item_heart_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_lv_item_heart_slt"/>
            <TextView
                android:id="@+id/home_lv_item_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:layout_marginStart="@dimen/default_distance"/>
        </LinearLayout>
        <TextView
            android:id="@+id/home_lv_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_2"
            android:layout_centerVertical="true"
            android:text="@string/category"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/home_lv_item_ll"
            android:layout_marginEnd="@dimen/text_view_padding"/>

        
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider"
        android:background="@color/listViewBack"/>
</LinearLayout>
